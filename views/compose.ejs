<%- include("./partials/header") -%>

    <h1>Compose</h1>
    <form method="post" action="/compose">
        <div class="form-group">
          <label for="composeTitle">Title</label>
          <input type="text" class="form-control" id="composeTitle" name="composeTitle" placeholder="Write the post title">
        </div>
        <div class="form-group">
            <label for="composeText">Post</label>
            <textarea class="form-control" id="composeText" rows="3"  name="composeText" placeholder="Write your post"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Publish</button>
      </form>

<%- include("./partials/footer") -%>